<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18pt"
            android:text="회원가입"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"

            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:text="아이디"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/m_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint="아이디를 입력해주세요"
            android:background="@drawable/edittextbox_login"/>

    </LinearLayout>
    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:text="이름"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/m_name"
            android:hint="이름을 입력해주세요"
            android:background="@drawable/edittextbox_login"/>
    </GridLayout>

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:text="비밀번호"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/m_pw"
            android:hint="비밀번호를 입력해주세요"
            android:background="@drawable/edittextbox_login"/>
    </GridLayout>

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:text="비밀번호 확인"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/m_pw1"
            android:hint="비밀번호 확인을 입력해주세요"
            android:background="@drawable/edittextbox_login"/>
    </GridLayout>

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:text="휴대번호"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/m_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint=" (-) 제외 숫자만 입력해주세요"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:background="@drawable/edittextbox_login"/>

    </GridLayout>

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:text="이메일"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint="이메일을 입력해 주세요"
            android:id="@+id/m_email"
            android:background="@drawable/edittextbox_login"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원가입 신청"
            android:id="@+id/registMember" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_return"
            android:id="@+id/backToLogin"
            android:background="#00ff0000"/>
    </LinearLayout>

</LinearLayout>