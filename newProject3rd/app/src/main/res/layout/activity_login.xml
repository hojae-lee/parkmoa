<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#5fb6df">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/hoonwhitecatr"
                android:gravity="center"
                android:textStyle="bold"
                android:text="회원로그인"
                android:textSize="50dp" />
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="1"
        android:paddingTop="120dp"
        android:rowCount="2">

        <EditText
            android:id="@+id/idform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/edittextbox_login"
            android:ems="10"
            android:hint="아이디를 입력하세요"
            android:inputType="textPersonName"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/passform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/edittextbox_login"
            android:hint="패스워드를 입력하세요"
            android:inputType="textPassword"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_rowSpan="2"
            android:layout_gravity="center"
            android:background="#5FB6DF"
            android:textColor="@color/browser_actions_bg_grey"
            android:text="로그인"
            android:textStyle="bold" />

    </GridLayout>
    <TextView android:layout_width="1dp"
        android:layout_height="5dp"/>

    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        android:id="@+id/buttonNaverLogin"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <TextView android:layout_width="1dp"
        android:layout_height="5dp"/>

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        />

    <TextView android:layout_width="1dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">



        <Button
            android:id="@+id/find_id"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:text="@string/btn_findid"
            android:textSize="10sp" />

        <Button
            android:id="@+id/find_pw"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:text="@string/btn_findpw"
            android:textSize="10sp" />

        <Button
            android:id="@+id/memberRegist"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:text="@string/btn_regist"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/backToMain"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#5FB6DF"
            android:textColor="@color/browser_actions_bg_grey"
            android:text="돌아가기"
            android:textStyle="bold"

            />
    </LinearLayout>

</LinearLayout>